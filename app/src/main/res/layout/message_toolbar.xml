<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/colorPrimary"
    android:id="@+id/message_toolbar"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/msgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"

            android:src="@drawable/ic__arrow_back" />

        <TextView
            android:id="@+id/nameChattext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="26dp"
            android:layout_toEndOf="@+id/msgBack"
            android:text="BINSTORE BY HUNG" />
        <TextView
            android:id="@+id/statusChattext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/msgBack"
            android:textSize="11dp"
            android:text="Hoạt động 30 phút trước" />
        <ImageView
            android:id="@+id/msgInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_storefront_24"
             />
    </RelativeLayout>


</androidx.appcompat.widget.Toolbar>