<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.InformationActivity">
    
    <LinearLayout
        android:id="@+id/tieude"
        android:layout_margin="10dp"
        android:weightSum="6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableLeft="@drawable/ic__arrow_back"
            android:layout_height="wrap_content"
            android:text=""/>

        <TextView
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Thông tin đơn hàng"/>

        <TextView
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableRight="@drawable/ic_question_mark"
            android:layout_height="wrap_content"
            android:text=""/>
        
    </LinearLayout>

    <ScrollView
        android:overScrollMode="never"
        android:layout_below="@id/tieude"
        android:layout_above="@id/tieude_cuoi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear_1"
                android:background="#1EAEA0"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="17dp"
                        android:textColor="@color/white"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_width="match_parent"
                        android:text="Đơn hàng đang chuẩn bị"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:maxLines="2"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:text="Đơn hàng của bạn đang chờ shop xác nhận. Hãy kiểm tra 'Chi tiết đơn hàng' để biết thêm thông tin."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />


                </LinearLayout>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_baseline_receipt_long_24"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:id="@+id/linear_2"
                android:layout_below="@id/linear_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:padding="5dp"
                    android:textSize="17dp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_delivery_24"
                    android:text="Thông tin vận chuyển"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhanh"/>

            </LinearLayout>

            <View
                android:layout_below="@id/linear_2"
                android:id="@+id/view1"
                android:background="@color/light_white"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@id/linear_3"
                android:layout_margin="10dp"
                android:layout_below="@id/view1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="17dp"
                        android:padding="5dp"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_address"
                        android:textColor="@color/black"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:text="Địa chỉ nhận hàng"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="17dp"
                        android:gravity="center_vertical|end"
                        android:textColor="#1EAEA0"
                        android:text="SAO CHÉP"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/name"
                    android:text="TangDuy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/phone"
                    android:text="0986245221"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/address"
                    android:maxLines="2"
                    android:text="344 Nguyễn Trãi, phường Thanh Xuân Trung, quận Thanh Xuân, TP Hà Nội"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_below="@id/linear_3"
                android:id="@+id/view2"
                android:background="@color/light_white"
                android:layout_width="match_parent"
                android:layout_height="9dp"/>

            <LinearLayout
                android:layout_below="@id/linear_3"
                android:id="@+id/tieude_mall"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingTop="10dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_mall_color_24"
                    android:drawablePadding="10dp"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F84F4F"
                    android:textStyle="bold"
                    android:text="Mall"/>

                <TextView
                    android:paddingTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:id="@+id/name_shop"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:text="shopdidongSin"/>

                <TextView
                    android:paddingTop="10dp"
                    android:drawableRight="@drawable/ic_arrow_right_24"
                    android:textSize="12sp"
                    android:gravity="center_vertical|end"
                    android:padding="5dp"
                    android:id="@+id/trangthai"
                    android:textColor="#F84F4F"
                    android:text="Xem Shop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>

            <View
                android:layout_below="@id/tieude_mall"
                android:id="@+id/view3"
                android:background="@color/light_white"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_below="@id/view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_below="@id/recyclerview"
                android:id="@+id/view4"
                android:background="@color/light_white"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_margin="10dp"
                android:id="@+id/linear_4"
                android:orientation="vertical"
                android:layout_below="@id/view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Thành tiền"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center_vertical|end"
                        android:drawableRight="@drawable/ic_arrow_down_24"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="đ104.200"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vui lòng thanh toán đ104.200 khi nhận hàng."/>



            </LinearLayout>

            <View
                android:layout_below="@id/linear_4"
                android:id="@+id/view5"
                android:background="@color/light_white"
                android:layout_width="match_parent"
                android:layout_height="9dp"/>

            <LinearLayout
                android:id="@+id/linear_5"
                android:layout_below="@id/view5"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_save_money"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:text="Phương thức thanh toán"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:paddingLeft="29dp"
                    android:layout_margin="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="15dp"
                    android:text="Thanh toán khi nhận hàng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_below="@id/linear_5"
                android:id="@+id/view6"
                android:background="@color/light_white"
                android:layout_width="match_parent"
                android:layout_height="9dp"/>

            <LinearLayout
                android:layout_margin="10dp"
                android:id="@+id/linear_6"
                android:orientation="vertical"
                android:layout_below="@id/view6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:weightSum="4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:text="Mã đơn hàng"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="center_vertical|end"
                        android:layout_weight="2"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:text="210201SAVRQSSR"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:textColor="#1EAEA0"
                        android:text="SAO CHÉP"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:weightSum="7"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="15dp"
                        android:text="Thời gian đặt hàng"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:gravity="center_vertical|end"
                        android:textSize="15dp"
                        android:text="29-08-2021 11:30"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_below="@id/linear_6"
                android:id="@+id/view7"
                android:background="@color/light_white"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_below="@+id/linear_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:background="@drawable/bg_btn"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/ic_chat"
                        android:gravity="center_vertical"
                        android:drawablePadding="5dp"
                        android:padding="10dp"
                        android:text="Liên hệ shop"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/bg_btn"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/ic_addcart"
                        android:gravity="center_vertical"
                        android:drawablePadding="5dp"
                        android:padding="10dp"
                        android:text="Mua lại"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/tieude_cuoi"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@drawable/bg_tuychon"
            android:text="Liên hệ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</RelativeLayout>