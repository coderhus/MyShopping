<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/left_mes_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="13dp"
        android:layout_toRightOf="@id/Leftava"
        android:background="@drawable/left_side_background"
        android:padding="5dp"
        android:text="Chao moi nguoi"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Leftava"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:src="@drawable/profile"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/Lefttime"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="-37dp"
        android:layout_toEndOf="@id/left_mes_data"
        android:gravity="bottom"
        android:padding="3dp"
        android:text="a minute ago"
        android:textColor="@color/black"
        android:textSize="7sp"
        android:textStyle="italic" />
</RelativeLayout>