<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/right_mes_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@id/rightAva"
        android:background="@drawable/right_side_background"
        android:padding="5dp"
        android:text="Chao moi nguoi"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rightAva"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/profile"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/righttime"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="1dp"
        android:layout_toStartOf="@+id/right_mes_data"
        android:layout_toLeftOf="@id/right_mes_data"

        android:gravity="bottom"
        android:padding="3dp"
        android:text="a minute ago"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="7sp" />
</RelativeLayout>