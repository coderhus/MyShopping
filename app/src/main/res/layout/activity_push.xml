<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.PushActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_push"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:background="@color/purple_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/back_image"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic__arrow_back"
                    />
                <TextView
                    android:layout_marginStart="5dp"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Thêm sản phẩm"/>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@id/appbar_push"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginStart="20dp"
                android:layout_margin="15dp"
                android:id="@+id/image"
                android:src="@drawable/ic_add_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <View
                android:layout_below="@id/image"
                android:id="@+id/view1"
                android:background="@color/light_white"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <LinearLayout
                android:layout_below="@id/view1"
                android:id="@+id/linear_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên sản phẩm"/>

                <EditText
                    android:padding="8dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập tên sản phẩm"/>
            </LinearLayout>

            <View
                android:layout_below="@id/linear_1"
                android:id="@+id/view2"
                android:background="@color/light_white"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:id="@id/linear_2"
                android:layout_below="@id/view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mô tả sản phẩm"/>

                <EditText
                    android:padding="8dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập mô tả sản phẩm"/>
            </LinearLayout>

            <View
                android:layout_below="@+id/linear_2"
                android:id="@+id/view3"
                android:background="@color/light_white"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:id="@+id/linear_3"
                android:layout_below="@id/view3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:drawablePadding="15dp"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/ic_menu_open"
                    android:text="Danh mục"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/imageView_category"
                    android:drawablePadding="10dp"
                    android:layout_margin="10dp"
                    android:drawableRight="@drawable/ic_arrow_forward_blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_below="@+id/linear_3"
                android:id="@+id/view4"
                android:background="@color/light_white"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/linear_4"
                android:weightSum="5"
                android:layout_below="@id/view4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:drawablePadding="15dp"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/ic_attach_money"
                    android:text="Giá"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_weight="4"
                    android:paddingLeft="10dp"
                    android:hint="Đặt"
                    android:padding="5dp"
                    android:background="@null"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_below="@+id/linear_4"
                android:id="@+id/viewfinal"
                android:background="@color/light_white"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

        </RelativeLayout>


    </ScrollView>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:textSize="18sp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_btn"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lưu"/>





            <TextView
                android:textSize="18sp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_btn"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hiển thị"/>

        </LinearLayout>



    </com.google.android.material.appbar.AppBarLayout>





</RelativeLayout>